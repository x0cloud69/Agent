# 데이터베이스 설정
DATABASE_URL=postgresql://postgres:1234@localhost:5432/postgres

# JWT 설정
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Hugging Face API 토큰 (선택사항)
HUGGINGFACE_API_TOKEN=your-huggingface-token-here

# 모델 설정
MODEL_TYPE=qwen3  # qwen3, qwen2, llama2, mistral
USE_OLLAMA=true   # true: Ollama 사용, false: 로컬 모델 사용
USE_HUGGINGFACE=false  # true: Hugging Face API 사용
USE_MCP=true      # true: MCP 사용, false: 직접 연결

# MCP 설정
MCP_SERVER_HOST=127.0.0.1
MCP_SERVER_PORT=11434
MCP_MODEL_NAME=qwen2.5:7b

# Exa Search API 설정
EXA_API_KEY=your-exa-api-key-here
EXA_SEARCH_ENABLED=true

# 모델 파일 경로 (로컬 모델 사용 시)
MODEL_PATH=models/qwen2.5-7b-instruct.gguf

# 서버 설정
HOST=0.0.0.0
PORT=8000 